@model Cliente
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Acceso|Registro</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200;400&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Oswald',sans-serif;
            overflow-x: hidden;
        }
        a{
            text-decoration:none;
        }
    </style>
</head>
<body>
    <div class="container bg-secondary mt-5 pt-5">
       <div class="row text-center">
           <h2>
               INICIAR SESSION
           </h2>
        </div>
       <div class="row justify-content-center">
           <div class="col-6 ">
                <form asp-controller="Acceso" asp-action="Index" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="NumeroDocumento" class="control-label"></label>
                        <input asp-for="NumeroDocumento" class="form-control" />
                        <span asp-validation-for="NumeroDocumento" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <input type="submit" value="INGRESAR" class="btn btn-dark" />
                    </div>
                </form>
           </div>
            
       </div>
       <div class="row justify-content-evenly">
           <div class="col-3">
               <p>
                   Registrarse - Persona Fisica
               </p>
               <br />
                <a class="text-black" asp-controller="PersonaFisicas" asp-action="Create">REGISTRARSE</a>
           </div>
            <div class="col-3">
                <p>
                    Registrarse - Persona Juridica
                </p>
                <br />
                <a class="text-black" asp-controller="PersonasJuridicas" asp-action="Create">REGISTRARSE</a>
            </div>

       </div>
   </div>
</body>
</html>
