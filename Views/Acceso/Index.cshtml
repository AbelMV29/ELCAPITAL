@model Cliente
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Acceso|Registro</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200;400&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Oswald',sans-serif;
            overflow-x: hidden;
        }
        a{
            text-decoration:none;
        }
    </style>
</head>
<body>
    <div class="container mt-5 pt-5">
        <div class="row justify-content-center align-items-center">
            <div class="col-6 alert-success alert" role="alert">
                <div class="row text-center">
                    <h2 class="text-dark">
                        INICIAR SESSION
                    </h2>
                </div>
                <div class="row justify-content-center mt-5 pt-2">
                    <div class="col-6 ">
                        <form asp-controller="Acceso" asp-action="Index" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="NumeroDocumento" class="control-label pb-3"><span class="text-dark">NUMERO DE DOCUMENTO</span></label>
                                <input asp-for="NumeroDocumento" class="form-control" />
                                <span asp-validation-for="NumeroDocumento" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-2">
                                <input type="submit" value="INGRESAR" class="btn btn-dark my-3 " />
                            </div>
                        </form>
                    </div>
                </div>
                <div class="row align-items-center justify-content-center mt-4">
                    <div class="col-12 text-center">
                        <h5>NUEVO USUARIO? REGISTRATE</h5>
                    </div>
                    <div class="col-3">
                        <a class="text-success" asp-action="Create" asp-controller="PersonaFisicas">PERSONA FISICA</a>
                    </div>
                    <div class="col-3">
                        <a class="text-success" asp-action="Create" asp-controller="PersonaJuridicas">PERSONA JURIDICA</a>
                    </div>
                </div>
            </div>
        </div>
        </div>
       
</body>
</html>
