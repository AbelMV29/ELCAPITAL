@model ELCAPITAL.Models.Solicitud
@{
    ViewData["Title"] = "Error Solicitud";
}

<h5 class="text-danger">ERROR AL REALIZAR UNA SOLICITUD</h5>
@if (@Model.TipoSolicitud=="Prestamo")
{
    <p>Usted ya cuenta con una solicitud de Prestamo pendiente, espere a que el Personal Administrativo revise la solicitud</p>
    <dl class="row">
        <dt class="col-sm-2">
            Id Solicitud
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdSolicitud)
        </dd>
        <dt>
            TIpo solicitud
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoSolicitud)
        </dd>
        <dt>
            Fecha de la Solicitud
        </dt>
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.FechaSolicitud)
        </dd>
        <dt>
            Estado
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
}
else if (@Model.TipoSolicitud=="Paquete")
{
    <p>Usted ya cuenta con una solicitud de Paquete pendiente, espere a que el Personal Administrativo revise la solicitud</p>
    <dl class="row">
        <dt class="col-sm-2">
            Id Solicitud
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdSolicitud)
        </dd>
        <dt>
            TIpo solicitud
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoSolicitud)
        </dd>
        <dt>
            Fecha de la Solicitud
        </dt>
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.FechaSolicitud)
        </dd>
        <dt>
            Estado
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
}

<a asp-action="Index" asp-controller="Home" class="btn btn-dark">VOLVER A INICIO</a>

