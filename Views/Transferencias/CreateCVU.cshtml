@model TarjetaDeCredito
@{
    ViewData["Title"] = "Transferencia CVU";
}

<h4>TRANSFERIR MEDIANTE CVU</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCVU" method="post">
            <div class="form-group">
                <label asp-for="CVU" class="control-label"></label>
                <input asp-for="CVU" class="form-control" />
                <span asp-validation-for="CVU" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="BUSCAR" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

